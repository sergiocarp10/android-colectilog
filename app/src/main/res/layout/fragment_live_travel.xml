<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.live.LiveTravelFragment">

    <Button
        android:id="@+id/finish_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/edit_btn"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        tools:visibility="visible"
        android:backgroundTint="@color/bus_414"/>

    <Button
        android:id="@+id/share_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/edit_btn"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:backgroundTint="@color/bus"/>

    <Button
        android:id="@+id/edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/share_btn"
        app:layout_constraintEnd_toStartOf="@id/finish_btn"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:backgroundTint="@color/bus_500"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/button_card"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/info_container"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/share_btn"
        tools:cardBackgroundColor="@color/bus">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/button_drawing"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginVertical="4dp"
                tools:src="@drawable/ic_bus" />

            <TextView
                android:id="@+id/rate_text"
                android:textColor="@color/white"
                tools:text="5.0"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:drawablePadding="4dp"
                app:drawableStartCompat="@drawable/ic_star" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/line_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Centenario"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="12dp"
        android:marqueeRepeatLimit="marquee_forever"
        app:layout_constraintTop_toBottomOf="@id/button_card"
        app:layout_constraintStart_toStartOf="@id/button_card"
        app:layout_constraintEnd_toEndOf="@id/button_card" />

    <LinearLayout
        android:id="@+id/info_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/share_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_card">

        <TextView
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/path"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/travel_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            tools:text="Desde: Arco de San Jorge"/>

        <TextView
            android:id="@+id/travel_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            tools:text="Hasta: Cruce Varela"/>

        <TextView
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/progress"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/started_min_ago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            tools:text="Iniciado hace 150 minutos"/>

        <TextView
            android:id="@+id/average_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            tools:text="Velocidad: 40 km/h"/>

    </LinearLayout>

    <TextView
        android:id="@+id/average_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/info_container"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:textSize="18sp"
        tools:text="Duración promedio: 160 minutos"/>

    <TextView
        android:id="@+id/estimation_error"
        android:textColor="@color/bus_414"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/average_duration"
        android:gravity="center"
        android:textSize="18sp"
        tools:text="Estimación con error de 10 minutos"/>

    <TextView
        android:id="@+id/next_travel_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/estimation_error"
        android:gravity="center"
        android:textSize="18sp"
        tools:text="Combinación a otro lugar (23:55)"/>

    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/circle"
        tools:progress="60"
        app:layout_constraintTop_toBottomOf="@id/next_travel_info"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginVertical="20dp"
        app:layout_constraintBottom_toTopOf="@id/updating_view"
        app:layout_constraintEnd_toStartOf="@id/near_box_info"/>

    <TextView
        android:id="@+id/minutes_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/pb"
        app:layout_constraintEnd_toEndOf="@id/pb"
        app:layout_constraintStart_toStartOf="@id/pb"
        app:layout_constraintTop_toTopOf="@+id/pb"
        android:textStyle="bold"
        android:textSize="30sp"
        tools:text="150'" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/speedometer_box"
        app:layout_constraintBottom_toBottomOf="@id/pb"
        app:layout_constraintEnd_toEndOf="@id/pb"
        android:layout_margin="8dp"
        android:layout_width="70dp"
        android:layout_height="70dp">

        <View
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/speedometer_bg"/>

        <TextView
            android:id="@+id/speedometer_text"
            tools:text="120"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="24sp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/near_box_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/pb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/pb"
        app:layout_constraintBottom_toBottomOf="@id/pb">

        <TextView
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="En la zona"
            android:gravity="center"
            android:textStyle="bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/near_stops_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:listitem="@layout/item_near_stop"
            tools:itemCount="2"/>

    </LinearLayout>

    <include layout="@layout/view_updating_location"
        android:id="@+id/updating_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/pb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/eta_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Llegarías a las 20:59"
        style="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/updating_view"
        app:layout_constraintBottom_toTopOf="@id/zone_info"/>

    <TextView
        android:id="@+id/zone_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="TRANSRADIO / CITY BELL"
        android:textColor="@color/yellow"
        style="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/eta_info"
        app:layout_constraintBottom_toBottomOf="parent"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>